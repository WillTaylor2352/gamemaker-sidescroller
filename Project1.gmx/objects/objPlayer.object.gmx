            <string>///Collide with an enemy
var aboveEnemy = y &lt; other.y+vSpd;
var falling = vSpd &gt; 0;

if (aboveEnemy &amp;&amp; (falling || state == LedgeGrabState)) 
{ 
    if(!place_meeting(x, yprevious, objSolid))
    {
        y = yprevious;
    }
    
    while(!place_meeting(x, y+1, other))
    {
        y++;
    }
    
    //kill the enemy
    with (other)
    {
        instance_destroy();
    }   
    
    vSpd = -(16/1.5);
}
else
{
    //take damage
    if(state!=HurtState)
    {
        vSpd = -6;
        hSpd = (sign(x-other.x)*5);
        state = HurtState;
        
        move(objDirt);
        
        if (instance_exists(objPlayerStats))
        {
            objPlayerStats.hp -=1;
        }
    }
}
</string>
